---
import { siteConfig } from "../config/site";
import Espec from "./espec.astro";

---

<footer
  class="Poppins w-full h-auto mt-10 bg-[#006877] pb-6 px-5 md:px-20 max-w-5xl md:pt-10 lg:max-w-6xl xl:max-w-full"
>
  <div class="w-full flex flex-col md:flex-row gap-x-20 text-xl">
    <div class="w-1/3">
      <h4 class="text-2xl pb-5 text-[#ffffff] text-bold">¿Dónde Nos puedes encontrar?</h4>
      <p class="text-[#FFFBFF]">
        Avenida Europa 8, Montequinto <br />
        41089 Dos Hermanas, España
      </p>
    </div>
    <div class="w-1/4">
      <h4 class="text-2xl pb-5 text-[#ffffff]">Productos</h4>
      <p class="text-[#fffbff]">
        Productos Destacados <br />
        Ofertas del mes <br />
        Novedades de la semana <br />
        Decoración <br />
        Globos <br />
        Empresas <br />
      </p>
    </div>
    <div class="w-1/4">
      <h4 class="text-2xl pb-5 text-[#ffffff]">Nuestra Empresa</h4>
      <p class="text-[#fffbff]">
        Envíos <br />
        Aviso Legal <br />
        Sobre nosotros <br />
        Pago seguro <br />
        Contacte con nosotros <br />
        Mapa del sitio <br />
        Tiendas
      </p>
    </div>
    
    <!-- <div class="w-1/4">
      <h4 class="text-3xl pb-5 text-[#CD27A0]">Su cuenta</h4>
      <p class="text-[#636B78]">
        Información Personal <br />
        Pedidos <br />
        Facturas por abono <br />
        Direcciones
      </p>
    </div> -->
  </div>

  <div
    id="contactos"
    class="w-full flex flex-col md:flex-row justify-between mb-16"
  >
    <div>
      <h4 class="text-3xl pb-5 text-[#ffffff] text-bold">Contáctanos</h4>
      <div class="flex flex-col gap-y-2">
        <div class="text-[#098680] flex items-center gap-x-4">
          <img class="size-10" src="/icons/phone.webp" alt="" />
          <p class="pt-2">{siteConfig.phone}</p>
        </div>

        <div class="text-[#00614A] flex gap-x-4">
          <img class="size-10" src="/icons/email.webp" alt="" />
          <p class="pt-2">{siteConfig.email}</p>
        </div>

        <p class="text-[#ffffff] inline-block font-lobster text-xl">
          {siteConfig.url}
        </p>
      </div>
    </div>

    <div id="icons" class="w-full flex justify-center md:justify-end">
      <div class="flex w-96 gap-x-3 py-2 justify-end pr-14 items-center">
        <img
          class="size-7 md:size-10"
          src="/icons/whatsapp.webp"
          alt="WhatsApp Detalles luna"
        />
        <img
          class="size-7 md:size-10"
          src="/icons/facebook.webp"
          alt="Facebook Detalles luna"
        />
        <img
          class="size-7 md:size-10"
          src="/icons/instagram.webp"
          alt="Instagram Detalles luna"
        />
        <img
          class="size-7 md:size-10"
          src="/icons/pinterest.webp"
          alt="Pinterest Detalles luna"
        />
        <img
          class="size-7 md:size-10"
          src="/icons/linkedin.webp"
          alt="LinkedIn Detalles luna"
        />
        <img
          class="size-7 md:size-10"
          src="/icons/gorjeo.webp"
          alt="Detalles luna Twitter"
        />
      </div>
    </div>
  </div>

  <Espec />

    <div
      class="flex flex-col md:flex-row gap-x-10 mt-5 justify-center items-center"
    >
      <img class="size-16" src="/logo.webp" alt="Detalles Luna" />
      <p class="text-[#ffffff] text-2xl font-lobster">
        © Detalles luna, todos los derechos reservados
      </p>
    </div>
  </div>
</footer>
