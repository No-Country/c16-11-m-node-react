---
import Espec from "../../components/espec.astro";
import Hero from "../../components/hero.astro";
import Listofcards from "../../components/listofcards.astro";
import Title from "../../components/title.astro";

import { getSection } from "../../services/getSection";
import { homeUrls } from "../../services/urls";

interface Props {
  title: string;
}
const { title } = Astro.props;

const data = await getSection(homeUrls.novedades);
---

<section
  id={title}
  class=`box-content px-5 mt-10 mx-auto max-w-5xl md:pt-10 lg:max-w-6xl xl:max-w-7xl`
>
  <Title color="bg-[#FDC5CE]" fontColor="text-white">{title}</Title>
  <Hero
    title={data.content[10].name}
    description={data.content[5].description}
    images={data.content[10].imagen[0].secure_url}
  />
  <Listofcards data={data} colorFont="text-[#f27084]" />
  <Espec />
</section>
../../fetch/getSection../../fetch/urls
