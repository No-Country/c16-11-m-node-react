---
import Button from "../components/button.astro";
import Carrusel from "../components/carrusel.astro";

interface Props {
  title: string;
  description: string;
  images: string;
}

const { title, description, images } = Astro.props;
console.log(images);
---

<div id={title} class="md:flex md:gap-x-8 mt-20 px-10 md:px-20">
  <div class="md:w-2/4">
    <Carrusel slider={images} />
  </div>

  <div class="md:w-2/4 flex justify-center">
    <header class="w-96 h-auto flex flex-col gap-y-16">
      <p class="font-lobster text-[#636B78] text-xl pt-5 pb-4">
        {description}
      </p>

      <div
        class="rounded-3xl bg-[#B2A9AB] py-2 px-6 text-[#403A3C] text-xl font-lobster"
      >
        Caracter√≠sticas Del Producto / Servicio
      </div>

      <div class="ml-52">
        <Button />
      </div>
    </header>
  </div>
</div>
