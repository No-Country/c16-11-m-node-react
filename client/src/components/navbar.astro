---
import Header from "./Header.astro"
---
<header class="">
  <nav class="navbar">
    <div class="pink-section fixed top-0 z-50">
      <div class="phone">
        <div class="phone-content">
          <img src="" alt="Phone Icon" />
          <span class="phone-number">954128609</span>
          <span class="horarios">Horarios</span>
          <img src="" alt="Arrow Icon" class="arrow" />
        </div>
      </div>
      <div class="search-bar">
        <input type="text" placeholder="Buscar..." />
      </div>
      <div class="social-icons">
        <div class="social-content">
          <img src="/icons/whatsapp.webp" alt="WhatsApp Detalles luna" />
          <img src="/icons/facebook.webp" alt="Facebook Detalles luna" />
          <img src="/icons/instagram.webp" alt="Instagram Detalles luna" />
          <img src="/icons/pinterest.webp" alt="Pinterest Detalles luna" />
          <img src="/icons/linkedin.webp" alt="LinkedIn Detalles luna" />
          <img src="/icons/gorjeo.webp" alt="Detalles luna Twitter" />
        </div>
      </div>
    </div>

    <div class="white-section sm:mt-16">
      <div class="logo">
        <a href="/">
          <img src="/logo-detalles-luna.webp" alt="Logo Detalles Luna" />
        </a>
      </div>

