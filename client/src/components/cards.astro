---
interface Props {
  imagePath: string
}

const { imagePath } = Astro.props
---

<article class="card"> 
  <img class="card-image" src={imagePath} alt="Producto1">
  
</article>

<style>
  .card {
    width: 100%;
    aspect-ratio: 4 /3 ;
    border-radius: 20px;
    overflow: hidden;
    margin-bottom: 20px;
    
  }

  .card-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
</style>
