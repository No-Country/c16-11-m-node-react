---
interface Props {
  imagePath: string;
  alt: string;
}

const { imagePath, alt } = Astro.props;
---

<article class="card mr-0 md:mr-10">
  <img class="card-image" src={imagePath} alt={alt} />
</article>

<style>
  .card {
    width: 350px;
    height: 280px;
    border-radius: 80px;
    overflow: hidden;
    margin-bottom: 20px;
    border-style: black;
    border-width: 2px;
  }

  .card-image {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }
</style>
