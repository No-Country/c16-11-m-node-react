---
interface Props {
  imagePath: string;
  alt: string;
  class?: string;
}

const { imagePath, alt, class: className } = Astro.props;
---

<article class=`card ${className}`>
  <img class=`card-image` src={imagePath} alt={alt} />
</article>

<style>
  .card {
    width: 350px;
    height: 280px;
    border-radius: 80px;
    overflow: hidden;
    border-style: black;
    border-width: 2px;
  }

  .card-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
</style>
