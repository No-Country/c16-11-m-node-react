---
import Section from "../components/section.astro";
import { siteConfig } from "../config/site";
import Layout from "../layouts/Layout.astro";
import Listofcards from "../components/listofcards.astro"
---

<Layout title={siteConfig.name}>
  <main>
    <Section
      title="Productos destacados"
      description="Astro is a new kind of static site builder that delivers lightning-fast performance with a modern developer experience."
      bgColor="bg-[#F1C9CF]"
      titleColor="text-[#E670A1]"
    />
    <Listofcards />
  </main>
</Layout>
